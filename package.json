{
  "name": "query-counter-mcp",
  "version": "1.0.0",
  "description": "MCP Server for logging LLM queries to a local markdown file",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=build/index.js --external:@modelcontextprotocol/sdk",
    "watch": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=build/index.js --external:@modelcontextprotocol/sdk --watch",
    "dev": "npm run build && node build/index.js",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "query-logging",
    "llm-tracking"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "esbuild": "^0.25.10",
    "typescript": "^5.7.2"
  }
}
